# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Backend - OpenAI
OPENAI_API_KEY=sk-...

# AI Provider Configuration
# Options: 'openai' (production/requires key) or 'dummy' (dev/testing)
AI_PROVIDER=openai

# Optional: Vector Store ID for context retrieval
# UCHION_VECTOR_STORE_ID=vs_...

# Auth Configuration
# Required: Secret for JWT signing (min 32 chars)
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-min-32-chars-here

# Optional: Encryption key for sensitive data (32 chars)
ENCRYPTION_KEY=your-32-character-encryption-key

# NextAuth Configuration (deprecated - use AUTH_SECRET)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Yandex OAuth
YANDEX_CLIENT_ID=your-yandex-client-id
YANDEX_CLIENT_SECRET=your-yandex-client-secret

# Telegram Login
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your-telegram-bot-username

# Telegram Login (Client-side - exposed to browser)
VITE_TELEGRAM_BOT_USERNAME=your-telegram-bot-username

# Prodamus Payment Integration
# Required for production payments
# Secret key from Prodamus dashboard (Settings -> API -> Secret Key)
PRODAMUS_SECRET=your-prodamus-secret-key
# Your Prodamus payform URL (e.g., https://your-store.payform.ru/)
PRODAMUS_PAYFORM_URL=https://your-store.payform.ru/

# Application URL (used for callbacks and redirects)
APP_URL=http://localhost:3000
